generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model projects {
  id          Int     @id @default(autoincrement())
  title       String?
  author      String?
  cost        Decimal?
  votes       Decimal?
  project_size String?
  description String?
  localization    String?
  isApproved  Boolean?
  city        String?
  lat         Decimal?
  lng         Decimal?
  additional_information String?
}

model users {
  id       Int      @id @default(autoincrement())
  email    String?
  password String?
  city     String?
  pesel    Decimal?
  name     String?
  surname  String?
  phone    String?
  isGov    Boolean?
  theme    String?
}

model votedProjects {
    id Int @id @default(autoincrement())
    userId Int
    projectId Int
}

model userProjects {
    id Int @id @default(autoincrement())
    userId Int
    projectId Int
}

